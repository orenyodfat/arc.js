{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "curly": 2,
    "no-undef": "off",
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": false,
        "ignoreComments": false
      }
    ],
    "no-tabs": 2,
    "no-var": 2,
    "prefer-const": 2,
    "prefer-spread": 2,
    "prefer-rest-params": 2,
    "prefer-arrow-callback": 2,
    "no-duplicate-imports": 2,
    "no-dupe-class-members": 2,
    "no-const-assign": 2,
    "no-confusing-arrow": 2,
    "no-lonely-if": 2,
    "no-continue": 2,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      2,
      "double",
      "avoid-escape"
    ],
    "no-unused-vars": 2,
    "no-useless-constructor": 2
  }
}
